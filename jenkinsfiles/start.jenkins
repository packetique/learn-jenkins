#!groovy
pipeline {
    agent any
    stages {
        stage('Start build') {
            steps {
                slackSend channel: '#team', message: '***Start build.***', username: 'jenkins'
                sh 'ip a | grep -i inet'
                  }
              }
            }

    post {
        success {
            slackSend channel: '#team', message: '***Build success***!', username: 'jenkins'
                }
        failure {
            slackSend channel: '#team', message: '***Build failure!***', username: 'jenkins'
                }
          }
}
