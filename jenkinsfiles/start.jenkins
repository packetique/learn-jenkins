#!groovy
pipeline {
  agent any
  timestamp()
  stages {
    stage('Build') {
      steps {
        slackSend channel: '#team', message: 'Start build.', username: 'jenkins'
        echo 'Building image...'
        sh 'podman build .'
      }
    }
  post {
    succsess {
      slackSend channel: '#team', message: 'Build success!', username: 'jenkins'
    }
    failure {
      slackSend channel: '#team', message: 'Bild failure!', username: 'jenkins'
    }
  }
  }

  }
