#!groovy
pipeline {
    agent any
    environment name: 'SLACK_TOKEN', value: credentials('slack tocken')
    stages {
        stage('Start build') {
            steps {
                slackSend channel: '#team', message: 'Start build.', username: 'jenkins'
                sh 'podman build jenkinsfiles/docker/toolbox/Dockerfile'
            }
        }
    }
    post {
        success {
            slackSend channel: '#team', message: 'Build success!', username: 'jenkins', token: "$cred.asSynchronized()"
        }
        failure {
            slackSend channel: '#team', message: 'Build failure!', username: 'jenkins'
        }
    }
}





























